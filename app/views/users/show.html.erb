<h4 align="center">本月<%= @user.username %>の勤務記録</h4>
<div class="center">
  <table class="table table-striped">
    <thead>
      <tr><td>日付</td><td>本月総作業時間</td><td>操作</td></tr>
    </thead>
    <tbody>
    <%  @bydate.each do |datetime|  %>
      <tr>
        <td><%= datetime.date  %></td>

        <td><%= datetime.sum %></td>
        <td><%= link_to "詳細", detail_users_path(@user,datetime.date)  %>    </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
